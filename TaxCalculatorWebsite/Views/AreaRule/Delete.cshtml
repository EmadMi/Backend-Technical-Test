@model Application.DTOs.AreaRules.DeleteAreaRuleDTO

@{
    ViewData["Title"] = "Delete Area Rule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Delete">
    <div class="row">
        <div class="col-12 py-3">
            <div class="row">
                <div class="col-11 col-md-6 col-lg-4 mx-auto rounded-3 p-3 border shadow shadow-sm">
                    <div class="row px-0 mx-0">
                        <div class="col-12 d-flex flex-column bg-light rounded py-2 mb-0 mt-2">
                            <h5>Are you sure you want to delete this Rule?</h5>
                        </div>
                        <div class="col-12 py-3 mb-3 w-100">
                            <div class="row px-0 mx-0">
                                <div class="col-12 d-flex flex-column bg-light rounded-top py-2">
                                    <p class="mb-0 small text-muted">@Html.DisplayNameFor(model => model.Area.Name)</p>
                                    <p class="mb-0 fw-bold">@Html.DisplayFor(model => model.Area.Name)</p>
                                </div>
                                <div class="col-12 d-flex flex-column bg-secondary bg-opacity-10 py-2">
                                    <p class="mb-1 small text-muted">@Html.DisplayNameFor(model => model.Year)</p>
                                    <p class="mb-0 fw-bold">@Html.DisplayFor(model => model.Year)</p>
                                </div>
                                <div class="col-12 d-flex flex-column bg-light rounded-bottom py-2">
                                    <p class="mb-0 small text-muted">@Html.DisplayNameFor(model => model.StartTime)</p>
                                    <p class="mb-0 fw-bold">@Html.DisplayFor(model => model.StartTime)</p>
                                </div>
                                <div class="col-12 d-flex flex-column bg-secondary bg-opacity-10 py-2">
                                    <p class="mb-1 small text-muted">@Html.DisplayNameFor(model => model.EndTime)</p>
                                    <p class="mb-0 fw-bold">@Html.DisplayFor(model => model.EndTime)</p>
                                </div>
                                <div class="col-12 d-flex flex-column bg-light rounded-bottom py-2">
                                    <p class="mb-0 small text-muted">@Html.DisplayNameFor(model => model.TaxFee)</p>
                                    <p class="mb-0 fw-bold">@Html.DisplayFor(model => model.TaxFee)</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 text-center">
                            <a class="btn btn-light w-100" asp-action="Index">Back To List</a>
                        </div>
                        <div class="col-6">
                            <input type="submit" value="Delete" class="btn btn-danger w-100" />
                            <input asp-for="Id" type="hidden" />
                        </div>
                        <div class="col-12">
                            <p class="mb-0 bg-danger text-light px-2 badge @(TempData["DeleteError"] == null ? "invisible":"")">
                                @TempData["DeleteError"]
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@model IEnumerable<Application.DTOs.Holidays.GetHolidayDTO>

@{
    ViewData["Title"] = "Holidays";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-12 py-3 bg-secondary bg-opacity-10 text-end rounded-3 d-flex justify-content-between align-items-center">
        <p class="mb-0 bg-warning text-dark px-2 badge @(TempData["Error"] == null ? "invisible":"")">
            @TempData["Error"]
        </p>
        <a class="btn btn-success px-4" asp-action="Create">Create New Holiday</a>
    </div>
    <div class="col-12 py-2">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.HolyDate)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.HolyDate.ToShortDateString()
                            </td>
                            <td class="text-end">
                                @Html.ActionLink("Edit", "Edit", new { @id = item.Id },new { @class="btn btn-sm btn-primary px-4"}) |
                                @Html.ActionLink("Delete", "Delete", new { @id = item.Id },new { @class="btn btn-sm btn-danger px-2"})
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@model Application.DTOs.Holidays.UpdateHolidayDTO

@{
    ViewData["Title"] = "Edit Holiday";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<form asp-action="Edit">
    <div class="row">
        <div class="col-12 py-3 bg-secondary bg-opacity-10 text-end rounded-3 d-flex justify-content-between align-items-center">
            <a class="btn btn-warning" asp-action="Index">Back To List</a>
            <p class="mb-0 bg-danger text-light px-2 badge @(TempData["EditError"] == null ? "invisible":"")">
                @TempData["EditError"]
            </p>
            <input type="submit" value="Edit" class="btn btn-primary px-5" />
            <input asp-for="Id" type="hidden" />
        </div>
        <div class="col-12 py-3">
            <div class="row">
                <div class="col-11 col-md-6 col-lg-4 mx-auto rounded-3 p-3 border shadow shadow-sm">
                    <div class="row px-0 mx-0">
                        <div class="col-12 d-flex flex-column bg-light rounded-top py-2">
                            <div class="form-floating">
                                <input asp-for="HolyDate" type="date" class="form-control" placeholder=" " />
                                <label asp-for="HolyDate" class="text-muted small"></label>
                                <span asp-validation-for="HolyDate" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>